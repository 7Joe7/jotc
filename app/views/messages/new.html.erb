<% provide(:title, 'Contact') %>
<div class="row">
    <aside>
        <section class="message_form pull-left contact-text">
            <%= render 'messages/contact_text' %>
        </section>
    </aside>
    <aside class="col-md-4 pull-right contact-form">
        <% if logged_in? %>
            <section class="user_info">
                <%= render 'shared/user_info' %>
            </section>
        <% end %>
        <section class="message_form">
            <%= render 'shared/message_form' %>
        </section>
    </aside>
</div>