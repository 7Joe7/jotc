<%= form_for(@message) do |f| %>
    <%= render 'shared/error_messages', object: f.object %>
    <div class="field">
        <% unless logged_in? %>
            <%= f.label :email %>
            <%= f.text_field :email, class: 'form-control' %>
        <% end %>
        <%= f.text_area :content, placeholder: 'Compose message...' %>
    </div>
    <%= f.submit 'Post', class: 'btn btn-primary' %>
<% end %>